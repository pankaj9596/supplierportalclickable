<mvc:View controllerName="com.spm.suppilerportal.controller.SupplierRegistration" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:micro="sap.suite.ui.commons" xmlns:core="sap.ui.core">
    
    
    
                <Page enableScrolling="false" showHeader="false" id="page" title="{i18n>title}" backgroundDesign="List">
                    <customHeader>
                        <Bar>
                            <contentLeft>
                                <Button type="Emphasized" icon="sap-icon://home" press="onPressHomePage" />
                            </contentLeft>
                        </Bar>
                    </customHeader>
                    <content>
                        <ScrollContainer vertical="true" height="100%">
                            <HBox backgroundDesign="Transparent" justifyContent="End" width="100%">
                                <Image src="/css/image/toplogo.PNG" />
                            </HBox>
                            <FlexBox class="sapUiLargeMarginTop" justifyContent="Center">
                                <micro:MicroProcessFlow id="idMP">
                                    <micro:content>
                                        <micro:MicroProcessFlowItem class="vendorCss classPurpledot1" />
                                        <micro:MicroProcessFlowItem class="vendorCss classPurpledot" press="onfnnextpress1" />
                                        <micro:MicroProcessFlowItem class="vendorCss" press="onfnnextpress2" />
                                        <micro:MicroProcessFlowItem class="vendorCss" press="onfnnextpress3" />
                                    </micro:content>
                                </micro:MicroProcessFlow>
                            </FlexBox>
                            <core:Fragment fragmentName="com.spm.suppilerportal.view.subView.SupplierRegistration.CompanyInformation" type="XML" />
                            <core:Fragment fragmentName="com.spm.suppilerportal.view.subView.SupplierRegistration.ContactInformation" type="XML" />
                            <core:Fragment fragmentName="com.spm.suppilerportal.view.subView.SupplierRegistration.Address" type="XML" />
                        </ScrollContainer>
                        <HBox backgroundDesign="Transparent" class="bottombackground sapUiSmallPaddingBegin" justifyContent="SpaceBetween" width="100%">
                            <Image src="/css/image/bottomlogo.PNG" />
                            <Text text="@FourOrigin" class="whiteText" />
                        </HBox>
                    </content>
                </Page>
</mvc:View>
